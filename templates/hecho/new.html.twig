{% extends 'base.html.twig' %}

{% block title %}Hechos{% endblock %}

{% block body %}{{ parent() }}
<h3>Nuevo Hecho</h3>
<div class="container">
     {{form_start(form)}}
      {{form_row(form.fecha)}}
            
            <div class="col-sm-8 col-sm-offset-2" id="exp_list" data-prototype="{{form_widget(form.detalleHechos.vars.prototype)|e('html_attr') }}"
                {% for row in form.detalleHechos %}             
                    
                   <div class="card">
                        <div class="card-header"> 
                            <strong>Nro hecho: {{(row.vars.value.Id)}}</strong> 
                        </div>
                        <div class="card-body">
                           {{ form_row(row)}}
                        </div>
                  </div>
               {% endfor %}

     

 
{{ form_end(form) }}

<a href="{{ path('hecho_index') }}">back to list</a>
</div>
{% endblock %}